{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Xmarkdown",
  "version": "0.9.8",
  "identifier": "com.xmarkdown.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Xmarkdown",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "icons/menu/*"
    ],
    "linux": {
      "deb": {
        "desktopTemplate": "assets/xmarkdown.desktop"
      },
      "rpm": {
        "desktopTemplate": "assets/xmarkdown.desktop"
      }
    },
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "headerImage": "icons/icon.ico",
        "sidebarImage": "icons/icon.ico",
        "languages": [
          "SimpChinese",
          "TradChinese",
          "English"
        ]
      }
    }
  },
  "plugins": {}
}
